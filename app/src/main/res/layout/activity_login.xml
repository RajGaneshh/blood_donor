<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login1"
    android:layout_height="match_parent"

    tools:context="com.example.gaja.blooddonor.login">

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:background="@drawable/login_color"

        android:text="LOGIN"
        android:textColor="@color/button_text_color" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/box_curve"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:hint=" PASSWORD"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_pass"
        android:layout_alignLeft="@+id/login_pass"
        android:layout_alignStart="@+id/login_pass"
        android:layout_marginBottom="40dp"
        android:background="@drawable/box_curve"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint="  PHONE NUMBER"
        android:inputType="text"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@android:color/transparent"
        android:onClick="registers"
        android:text="DON'T HAVE AN ACCOUNT? CLICK TO REGISTER "
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_user"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_marginBottom="49dp"
        android:fontFamily="monospace"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal" />


</RelativeLayout>
